<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.idexadorrain.SearchController">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Enter text to search"/>
            <ComboBox fx:id="fileTypeComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="PDF"/>
                        <String fx:value="Word"/>
                        <String fx:value="Excel"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Search" onAction="#handleSearch"/>
            <Button text="Clear" onAction="#handleClear"/>
        </HBox>
        <TableView fx:id="resultsTable" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="nameColumn" text="File Name" prefWidth="200.0"/>
                <TableColumn fx:id="typeColumn" text="File Type" prefWidth="100.0"/>
                <TableColumn fx:id="pathColumn" text="File Path" prefWidth="300.0"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

